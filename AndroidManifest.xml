<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeebraapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/zeebraa"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.zeebraapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.zeebraapp.RecorderActivity"
            android:label="@string/title_activity_recorder"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.zeebraapp.AudioRecordTest"
            android:label="@string/title_activity_radio" >
        </activity>
        <activity
            android:name="com.example.zeebraapp.WebActivity"
            android:label="@string/title_activity_web" 
            >
        </activity>
    </application>

</manifest>
